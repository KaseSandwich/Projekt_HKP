<controls:MetroWindow x:Class="Projekt_HKP.GUI.Views.TypeSelectionPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_HKP.GUI.Views"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Neu" Height="150" Width="250"
                      BorderThickness="1"
                      BorderBrush="LightSlateGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="3,3,3,3">
            <Label>Art der Komponente:</Label>
            <ComboBox x:Name="ComboBox" Margin="3,3,3,3"/>
        </StackPanel>
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal">
            <Button Margin="3,3,3,3" x:Name="btn_Accept" Click="Btn_Accept_OnClick" Style="{DynamicResource MyMetroButton}">Übernehmen</Button>
            <Button Margin="3,3,3,3" x:Name="btn_Cancel" Click="Btn_Cancel_OnClick" Style="{DynamicResource MyMetroButton}">Abbrechen</Button>
        </StackPanel>
    </Grid>
</controls:MetroWindow>

