<Window x:Class="Projekt_HKP.GUI.Views.TypeSelectionPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_HKP.GUI.Views"
        mc:Ignorable="d"
        Title="TypeSelectionPopup" Height="150" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label>Art der Komponente:</Label>
            <ComboBox x:Name="ComboBox"/>
        </StackPanel>
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal">
            <Button Margin="3,3,3,3">Übernehmen</Button>
            <Button Margin="3,3,3,3">Abbrechen</Button>
        </StackPanel>
    </Grid>
</Window>
